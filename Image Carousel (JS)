const imgs = document.getElementByID("imgs");
const img = document.querySelector("#imgs img");

let index=0;

function run(){
    index++;
    if(index>img.length-1){
        index=0;
    }

    images.style.transform = `transformX(${-idx*500}px)`;

    setTimeout(run , 2000);
}

setInterval(run , 2000);
